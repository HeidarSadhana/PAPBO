                  <Font name="Gill Sans MT" size="14.0" />
               </font>
            </TextField>
            <Button fx:id="btnLogin" layoutX="52.0" layoutY="234.0" mnemonicParsing="false" onMouseClicked="#login" prefHeight="40.0" prefWidth="195.0" styleClass="btnlogin" stylesheets="@tes.css" text="Login" textFill="WHITE">
