               </cursor>
            </Button>
         </children>
      </AnchorPane>
      <Button fx:id="btnExit" layoutX="571.0" layoutY="3.0" mnemonicParsing="false" onMouseClicked="#exit" prefHeight="16.0" prefWidth="22.0" styleClass="btnexit" stylesheets="@tes.css" text="x" textFill="WHITE">
